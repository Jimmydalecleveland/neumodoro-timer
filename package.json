{
  "name": "neumodoro",
  "productName": "Neumodoro Timer",
  "version": "1.0.0-alpha.1",
  "description": "A neumorphic styled pomodoro timer for Linux, OS X, and Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "develop": "webpack-dev-server --hot",
    "build": "webpack",
    "package": "electron-packager . --out build --icon=src/assets/icon",
    "package:win": "electron-packager . --out build --icon=src/assets/icon.ico",
    "package:mac": "electron-packager . --out build --icon=src/assets/icon.icns",
    "package:all": "electron-packager . --all --out build",
    "package:linux": "electron-packager . --platform linux --arch x64 --out build --icon=src/assets/icon",
    "installer:win": "node build.js",
    "installer:debian": "electron-installer-debian --src build/neumodoro-linux-x64/ --dest build/installers/ --arch amd64 --icon src/assets/icon.png",
    "installer:mac": "electron-installer-dmg ./build/'Neumodoro Timer-darwin-x64'/'Neumodoro Timer.app' Neumodoro --icon=src/assets/icon.png --background=src/assets/dmg-background.png --out=build/installers/mac"
  },
  "keywords": [
    "neumodoro",
    "newmodoro",
    "pomodoro",
    "neumorphic",
    "neumorphism",
    "timer",
    "tomato"
  ],
  "author": "Jimmy Cleveland",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "css-loader": "^3.4.2",
    "electron": "^13.6.6",
    "electron-installer-debian": "^3.0.0",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "^14.2.1",
    "electron-winstaller": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "file-loader": "^6.0.0",
    "framer-motion": "^1.10.3",
    "prettier": "^2.0.3",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.19",
    "style-loader": "^1.1.3",
    "styled-components": "^5.0.1",
    "svg-inline-loader": "^0.8.2",
    "typeface-poppins": "0.0.72",
    "url-loader": "^4.0.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0"
  }
}
